{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "src/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.ce.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
